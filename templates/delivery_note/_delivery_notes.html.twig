{% for delivery_note in delivery_notes %}
    <tr>
        <td data-class="Numéro"><a href="{{ path('delivery_note_show', {'id': delivery_note.id}) }}" class="btn index-button">{{ delivery_note.number }}</a></td>
        <td data-class="Fournisseur" class="text-center">{{ delivery_note.provider.name }}</td>
        <td data-class="Date" class="text-center">{{ delivery_note.date ? delivery_note.date|date('d-m-Y') : '' }}</td>
    </tr>
{% else %}
    <tr>
        <td colspan="4">Il n'y a pas de BL enregistrés</td>
    </tr>
{% endfor %}