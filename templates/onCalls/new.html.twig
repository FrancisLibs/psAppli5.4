{% extends 'base.html.twig' %}

{% block title %}Nouveau rapport d'astreinte
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('on_call_new') }}
{% endblock %}

{% block body %}
	<main class="d-flex justify-content-start mt-5">
		{% include 'user/_photo.html.twig' %}
		<article class="col-12 col-lg-8 col-xl-7">
			<header class="row mb-3 justify-content-start align-items-top flex-wrap">
				<div class="col-7 col-md-6 col-lg-7">
					<h2 class="text-primary">Nouveau rapport d'astreinte</h2>
				</div>
				<div class="col-4 d-flex justify-content-start align-items-center flex-wrap">
					<a class="btn btn-primary btn-sm" href="{{ path('onCall_index') }}" role="button">Liste des astreintes</a>
				</div>
			</header>
			<section class="row align-items-start">
				<div class="col-12 d-flex justify-content-start mb-4">
