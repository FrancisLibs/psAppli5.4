<div class="border border-info rounded p-2 m-1">
    <h3>Pièces détachées</h3>
    <table class="table table-sm">
        <head>
            <tr>
                <th>Code</th>
                <th class="text-center">Désignation</th>
                <th class="text-center">Qte stock</th>
            </tr>
        </head>
        <tbody>
            {% for part in machine.parts %}
                <tr>
                    <td><a href="{{ path('part_show', {'id': part.id}) }}">{{ part.code }}</a></td>
                    <td class="text-center">{{ part.designation }}</td>
                    <td class="text-center">{{ part.stock.qteStock }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>      
</div>