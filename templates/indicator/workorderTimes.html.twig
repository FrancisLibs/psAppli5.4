{% extends 'base.html.twig' %}

{% block title %}Indicateurs : temps intervention
{% endblock %}

{% block body %}
	<main class="row justify-content-start mt-5">
		{% include 'user/_photo.html.twig' %}
		<article class="col-12 col-xl-10">
			<header>
				<div class="row">
					<div class="d-flex justify-content-start align-items-center flex-wrap">
						<h1 class="page-title me-5">Temps des interventions/machine</h1>
						{% include 'indicator/_indicator_navbar.html.twig' %}
					</div>
				</div>
			</header>
			<section class="mt-4">
				<div>
					<h4>Temps total des interventions :
					{{totalDays}}
					jours
					{{totalHours}}
					heures
					{{totalMinutes}}
					minutes</h3>
				</div>
				<div class="d-flex justify-content-between flex-wrap mt-5">
					{% for machine in machineDatas %}
						<div class="card mb-3" style="width: 17rem;">
							<div class="card-body">
								<span class="card-title">
									<strong>{{ loop.index }}.
										{{ machine.name }}</strong>
								</span>
								<p class="card-text">
									{{machine.days}}
									jours
									{{machine.hours}}
									heures
									{{machine.minutes}}
									minutes
								</p>
								{# <a href="#" class="btn btn-primary">Go somewhere</a> #}
							</div>
						</div>
					{% endfor %}
				</div>
			</section>
		</article>
	</main>
{% endblock %}
