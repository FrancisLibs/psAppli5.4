{{ form_start(form) }} 
    <div class="row mt-4 rounded p-3 machines">
        <div class="col-12">
            <div class="row">
                <div class="text-primary">
                    <h4>Machine</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-5">
                    {{ form_label(form.machine) }}  
                    {{ form_widget(form.machine) }}  
                </div>
                <div class="col-2">
                    {{ form_label(form.type) }}  
                    {{ form_widget(form.type) }}  
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3 rounded p-3 interventions">
        <div class="col-12">
            <div class="row">
                <div class="text-primary">
                    <h4>Intervention</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-1 d-flex align-items-center mt-4">
                    <button class="btn btn-success mr-4 btn-sm" id="btn_copy">copy</button>
                </div>
                <div class="col-11">
                    <div class="row">
                        <div class="col-12">
                            {{ form_label(form.request) }}  
                            {{ form_widget(form.request) }}  
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            {{ form_label(form.implementation) }}  
                            {{ form_widget(form.implementation) }}  
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12">
                    {{ form_label(form.remark) }}  
                    {{ form_widget(form.remark) }}  
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3 rounded p-3 temps" id="time_management">
        <div class="col-12">
            <div class="row">
                <div class="text-primary">
                    <h4>Temps</h4>
                </div>
            </div>
            <div class="row justify-content-start">
                <div>
                    <span>Date début</span>
                    {{ form_widget(form.startDate) }}
                </div>
                <div class="ml-4">
                    <span>Heure début</span>
                    {{ form_widget(form.startTime) }}
                </div>
                <div class="ml-4 w-50">
                    <div>Durée :</div>
                    <div class="d-flex align-items-center">
                        <div class="d-flex mr-2">
                            <span>Jours</span>
                            <span class="ml-1 caseTemps">
                                {{ form_widget(form.durationDay) }}
                            </span>
                        </div>
                        <div class="d-flex mr-2">
                            <span>Heures</span>
                            <span class="ml-1 caseTemps">
                                {{ form_widget(form.durationHour) }}
                            </span>
                        </div>
                        <div class="d-flex mr-2">
                            <span>Minutes</span>
                            <span class="ml-1 caseTemps">
                                {{ form_widget(form.durationMinute) }}
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row pt-4">
                <div>
                    <span>Date fin</span>
                    {{ form_widget(form.endDate) }}
                </div>
                <div class="ml-4">
                    <span>Heure fin</span>
                    {{ form_widget(form.endTime) }}
                </div>
                <div class="ml-4">
                    <span>Arrêt machine</span>
                    <div class="d-flex justify-content-start">
                        <span>Heures</span>
                        <span class="ml-1 mr-3 caseTemps">
                            {{ form_widget(form.stopTimeHour) }}
                        </span>
                        <span>Minutes</span>
                        <span class="ml-1 caseTemps">
                            {{ form_widget(form.stopTimeMinute) }}
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3 text-center">
            <button type="submit" class="btn btn-primary pull-right w-100 mt-3">Valider</button>
        </div>
    </div>
{{ form_end(form) }}