{% extends 'base.html.twig' %}

{% block title %}Nouveau bon de travail
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="/assets/css/workorder-new.css">
{% endblock %}


{% block body %}
	<main class="row justify-content-start mt-5">
		{% include 'user/_photo.html.twig' %}
		<article class="col-12 col-md-12 col-lg-12 col-xl-10">
			<header class="mb-5">
				<h1 class="page-title">Nouveau BT</h1>
			</header>
			<section class="row">
				<div class="col-12 col-sm-3 col-xl-2">
					<a class="btn btn-primary new-btn me-5" href="{{ path('machine_choice', {'mode': 'newWorkorder'}) }}">Machine(s)</a>
				</div>
				<div class="text-primary text-af-btn col-12 col-sm-7 mt-1">
					{% if workorder.machines is not empty %}
						{% for machine in workorder.machines %}
							{{ machine.designation }}
						{% endfor %}
					{% endif %}
				</div>
			</section>
			<section class="row mt-3">
				<div class="col-12 col-xl-11">
					{{ include('workorder/_form.html.twig') }}
				</div>
			</section>
		</article>
	</main>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('workorder') }}
{% endblock %}
