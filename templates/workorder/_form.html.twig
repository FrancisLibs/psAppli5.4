{{ form_start(form) }}
<div class="d-flex justify-content-start align-items-center mt-4">
	<div class="d-flex justify-content-start align-items-baseline me-5">
		<p class="item me-2">Technicien :</p>
		{{ form_row(form.user) }}
	</div>
	<div class="d-flex justify-content-start align-items-baseline me-5">
		<p class="item me-2">Type :</p>
		{{ form_row(form.type) }}
	</div>
</div>
<div class="row mt-4">
	<div class="col-12 col-xl-10">
		<h4 class="item">Intervention</h4>
		<div class="row border border-info rounded p-2">
			<div class="col-12 ">
				<div class="mt-2">
					{{ form_label(form.request) }}
					{{ form_widget(form.request) }}
				</div>
				<div class="mt-2">
					{{ form_label(form.implementation) }}
					{{ form_widget(form.implementation) }}
				</div>
				<div class="mt-2">
					{{ form_label(form.remark) }}
					{{ form_widget(form.remark) }}
				</div>
			</div>
		</div>
	</div>
</div>

<div class="d-flex justify-content-start align-items-start flex-wrap mb-3 mt-5" id="time_management">

	<div class="d-flex flex-column justify-content-start flex-wrap me-3">
		<div class="item">Date</div>
		<div class="d-flex flex-column justify-content-center align-items-center">
			<div class="time-box" id="workorder_time">
				<div class="date-box-item">
					{{ form_row(form.startDate)}}
				</div>
				<div class="time2-box">
					{{ form_row(form.startTime) }}
				</div>
				<div class="date-box-item">
					{{ form_row(form.endDate)}}
				</div>
				<div class="time2-box">
					{{ form_row(form.endTime)}}
				</div>
			</div>
			<div id="warning-time-text-box" class="warning-time-text invisible">
				<p>La date de fin est antérieure à la date de début</p>
			</div>
		</div>
	</div>

	<div class="d-flex flex-column justify-content-start flex-wrap me-3">
		<div class="item">Durée</div>
		<div class="d-flex flex-column justify-content-center align-items-center">
			<div class="duration-box" id="duration_time">
				<div class="caseHeure">
					{{ form_row(form.durationDay)}}
				</div>
				<div class="caseHeure">
					{{ form_row(form.durationHour)}}
				</div>
				<div class="caseHeure">
					{{ form_row(form.durationMinute)}}
				</div>
			</div>
			<div id="warning-duration-text-box" class="warning-duration-text invisible">
				<p>La durée est à 0 !</p>
			</div>
		</div>
	</div>

	<div class="me-3">
		<span class="item">Arrêt machine</span>
		<div class="global-stop-time-box">
			<div class="caseHeure">
				{{ form_row(form.stopTimeHour)}}
			</div>
			<div class="caseHeure">
				{{ form_row(form.stopTimeMinute)}}
			</div>
		</div>
	</div>

	<div class="me-3">
		<span class="item">Coût</span>
		<div class="global-cost-box">
			{{ form_row(form.operationPrice)}}
		</div>
	</div>

</div>

<div class="d-flex justify-content-start align-items-center flex-wrap mb-5">
	<div class="standby-box mb-3 me-5" id="standby">
		<div class="time2-box">
			{{ form_label(form.standby) }}
			{{ form_widget(form.standby) }}
		</div>
	</div>
	<button type="submit" class="btn btn-primary button-sm pull-right button-valid me-5 mb-3">Valider</button>
	<p id="completedAfterText" class="invisible mb-3">Attention ce BT en standby devra être complété ultérieurement.</p>
	<p id="completedStandby" class="invisible mb-3">Pour sortir de l'état standby, donnes une durée au BT !</p>
</div>

{{ form_end(form) }}
