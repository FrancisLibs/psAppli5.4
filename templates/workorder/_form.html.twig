{{ form_start(form) }}
    <div class="row mt-5">
        <div class="d-flex justify-content-start align-items-baseline col-12 col-sm-7 col-md-5 col-xl-4">
            <h4 class="text-primary me-4">Technicien</h4>
            {{ form_row(form.user) }}
        </div>
        <div class="d-flex justify-content-start align-items-baseline col-12 col-sm-7 col-md-5 col-xl-4 ">
            <h4 class="me-5 text-primary">Type BT</h4>
            {{ form_row(form.type) }}
        </div>
    </div>
    <div class="row mt-4 interventions">
        <div class="col-11 col-xl-10">
            <h4 class="text-primary">Intervention</h4> 
            <div class="row border border-info rounded p-2">
                <div class="col-12 ">
                    <div class="mt-2">
                        {{ form_label(form.request) }}  
                        {{ form_widget(form.request) }}  
                    </div>
                    <div class="mt-2">
                        {{ form_label(form.implementation) }}  
                        {{ form_widget(form.implementation) }}  
                    </div>
                    <div class="mt-2">
                        {{ form_label(form.remark) }}  
                        {{ form_widget(form.remark) }}  
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="temps" id="time_management">
        <div class="row justify-content-start">
            <div class="mt-4 mt-2 bloc_date" id="workorder_time">
                <div class="text-primary">
                    <h4>Date</h4>
                </div>
                <div class="d-flex justify-content-around border border-secondary rounded me-3 p-3 pb-3">
                    <div class="row justify-content-start">
                        <div class="mb-3 me-1">
                            {{ form_label(form.startDate) }}
                            <div class="caseTemps">
                                {{ form_widget(form.startDate) }}
                            </div>
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.endDate) }}
                            <div class="caseTemps">
                                {{ form_widget(form.endDate) }}
                            </div>
                        </div>
                    </div> 
                    <div class="row justify-content-start">
                        <div>
                            {{ form_label(form.startTime) }}
                            <div class="caseHeure2">
                                {{ form_widget(form.startTime) }}
                            </div>
                        </div>
                        <div>
                            {{ form_label(form.endTime) }}
                            <div class="caseHeure2">
                                {{ form_widget(form.endTime) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-4 bloc_duree">
                <div class="text-primary">
                    <h4>Durée</h4>
                </div>
                <div class="border border-secondary rounded p-3" id="duration_time">
                    <div class="d-flex align-items-center">
                        <div>
                            {{ form_label(form.durationDay) }}
                            <div class="caseHeure">
                                {{ form_widget(form.durationDay) }}
                            </div>
                        </div>
                        <div>
                            {{ form_label(form.durationHour) }}
                            <div class="caseHeure">
                                {{ form_widget(form.durationHour) }}
                            </div>
                        </div>
                        <div>
                            {{ form_label(form.durationMinute) }}
                            <div class="caseHeure">
                                {{ form_widget(form.durationMinute) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-4 bloc_cout">
                <div class="text-primary">
                    <h4>Coût</h4>
                </div>
                <div class="col-12 d-flex justify-content-start border border-secondary rounded p-3 pb-1">
                    <div class="row">
                        <div class="mb-3">
                            {{ form_label(form.operationPrice) }}
                            <div class="caseHeure">
                                {{ form_widget(form.operationPrice) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-4 bloc_arret_machine">
                <div class="text-primary">
                    <h4>Arrêt machine</h4>
                </div>
                <div class="col-12 d-flex justify-content-around me-3 border border-secondary rounded p-3">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            {{ form_label(form.stopTimeHour) }}
                            <div class="caseHeure">
                                {{ form_widget(form.stopTimeHour) }}
                            </div>
                        </div>
                        <div>
                            {{ form_label(form.stopTimeMinute) }}
                            <div class="caseHeure">
                                {{ form_widget(form.stopTimeMinute) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-8 col-sm-5 col-md-4 col-lg-4 col-xl-3 mt-5 mb-5 text-center">
            <button type="submit" class="btn btn-primary pull-right w-100 mt-3">Valider</button>
        </div>
    </div>
{{ form_end(form) }}