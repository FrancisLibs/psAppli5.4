{{ form_start(form) }}
<div class="row mt-4">
	<div class="d-flex justify-content-start align-items-baseline col-12 col-sm-7 col-md-5 col-xl-4">
		<h4 class="item me-4">Technicien</h4>
		{{ form_row(form.user) }}
	</div>
	<div class="d-flex justify-content-start align-items-baseline col-12 col-sm-7 col-md-5 col-xl-4 ">
		<h4 class="item me-4">Type BT</h4>
		{{ form_row(form.type) }}
	</div>
</div>
<div class="row mt-4">
	<div class="col-12 col-xl-10">
		<h4 class="item">Intervention</h4>
		<div class="row border border-info rounded p-2">
			<div class="col-12 ">
				<div class="mt-2">
					{{ form_label(form.request) }}
					{{ form_widget(form.request) }}
				</div>
				<div class="mt-2">
					{{ form_label(form.implementation) }}
					{{ form_widget(form.implementation) }}
				</div>
				<div class="mt-2">
					{{ form_label(form.remark) }}
					{{ form_widget(form.remark) }}
				</div>
			</div>
		</div>
	</div>
</div>
<div class="duration me-3 mt-3" id="time_management">
	<div class="me-3 mt-3">
		<span class="item">Date</span>
		<div class="global-date-box" id="workorder_time">
			<div class="date-box m-2">
				{{ form_label(form.startDate) }}
				{{ form_widget(form.startDate) }}
			</div>
			<div class="time2-box m-2">
				{{ form_label(form.startTime) }}
				{{ form_widget(form.startTime) }}
			</div>
			<div class="date-box m-2">
				{{ form_label(form.endDate) }}
				{{ form_widget(form.endDate) }}
			</div>
			<div class="time2-box m-2">
				{{ form_label(form.endTime) }}
				{{ form_widget(form.endTime) }}
			</div>
		</div>
	</div>
	<div class="me-3 mt-3">
		<span class="item">Durée</span>
		<div class="global-duration-box" id="duration_time">
			<div class="caseHeure">
				{{ form_label(form.durationDay) }}
				{{ form_widget(form.durationDay) }}
			</div>
			<div class="caseHeure">
				{{ form_label(form.durationHour) }}
				{{ form_widget(form.durationHour) }}
			</div>
			<div class="caseHeure">
				{{ form_label(form.durationMinute) }}
				{{ form_widget(form.durationMinute) }}
			</div>
		</div>
	</div>
	<div class="mt-3 me-3">
		<span class="item">Arrêt machine</span>
		<div class="global-stop-time-box">
			<div class="caseHeure">
				{{ form_label(form.stopTimeHour) }}
				{{ form_widget(form.stopTimeHour) }}
			</div>
			<div class="caseHeure">
				{{ form_label(form.stopTimeMinute) }}
				{{ form_widget(form.stopTimeMinute) }}
			</div>
		</div>
	</div>
	<div class="mt-3 me-3">
		<span class="item">Coût</span>
		<div class="global-cost-box">
			{{ form_label(form.operationPrice) }}
			{{ form_widget(form.operationPrice) }}
		</div>
	</div>
</div>
<div class="row">
	<div class="col-8 col-sm-5 col-md-4 col-lg-4 col-xl-3 mt-5 mb-5 text-center">
		<button type="submit" class="btn btn-primary pull-right w-100 mt-3">Valider</button>
	</div>
</div>
{{ form_end(form) }}
