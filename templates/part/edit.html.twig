{% extends 'base.html.twig' %}

{% block title %}Pièce détachée - Edition
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="/assets/css/partEdit.css">
{% endblock %}


{% block body %}
	<main class="row justify-content-start mt-5 mb-5">
		{% include 'user/_photo.html.twig' %}
		<article class="col-12 col-lg-12 col-xl-10">
			<header class="row mb-3 justify-content-start align-items-center flex-wrap">
				<div class="col-12 col-sm-5 col-md-4 col-lg-3">
					<h1 class="page-title">Edition pièce</h1>
				</div>
				<div class="col-12 col-md-8 d-flex justify-content-start align-items-center flex-wrap">
					<a class="btn btn-primary btn-sm me-2" href="{{ path('part_index') }}" role="button">Retour à la liste</a>
					{% if is_granted('ROLE_ADMIN') %}
						{{ include('part/_delete_form.html.twig') }}
					{% endif %}
				</div>
			</header>
			<div class="mt-4 col-12">
				{{ include('part/_form.html.twig') }}
			</div>
		</article>
	</main>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="/assets/js/partsOrderDate.js" defer></script>
{% endblock %}
