{% extends 'base.html.twig' %}

{% block title %}Pièce détachée - Edition{% endblock %}

{% block body %}
    <main class="d-flex justify-content-start mt-5 mb-5">
        <aside class="col-2 displayMd mt-5">
            {% include 'user/_photo.html.twig' %}
        </aside>
        <article>
            <header class="row mb-3 justify-content-start align-items-center flex-wrap">
                <div class="col-5 col-sm-4 col-md-3">
                    <h3 class="text-primary">Edition pièce</h3>
                </div>
                <div class="col-7 col-md-9 d-flex justify-content-start align-items-center flex-wrap">
                    <a class="btn btn-primary btn-sm me-2" href="{{ path('part_index') }}" role="button">Retour à la liste</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        {{ include('part/_delete_form.html.twig') }}
                    {% endif %}
                </div>
            </header>
            <div class="mt-4 col-12">
                {{ include('part/_form.html.twig') }}
            </div>
        </article>
    </main>
{% endblock %}