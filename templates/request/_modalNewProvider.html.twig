<!-- _modalNewProvider.html.twig -->

<div class="modal" id="providerModal">
	<div class="modal-dialog modal-provider">
		<div
			class="modal-content">

			<!-- En-tête de la modale -->
			<div class="modal-header">
				<h4 class="modal-title">Sélectionnez un fournisseur</h4>
				<button type="button" class="closeProviderModal" data-dismiss="modal">&times;</button>
			</div>

			<!-- Contenu de la modale -->
			<div class="modal-body">
				<div id="selectContainer">
					<select id="fournisseurs" class="form-control"></select>
				</div>
			</div>

			<!-- Pied de la modale -->
			<div class="modal-footer">
				<button type="button" class="closeProviderModal" class="btn btn-secondary">Fermer</button>
			</div>
		</div>
	</div>
</div>
