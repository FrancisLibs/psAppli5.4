<div class="row">
	<table class="table table-striped table-sm">
		<tbody class="js-filter-content">
			{% for user in users %}
				{% if ('ROLE_USER' in user.roles or 'ROLE_ADMIN' in user.roles) and 'ROLE_SUPER' not in user.roles %}
					<tr>
						<th scope="row">
							<a href="{{ path('user_edit', { 'id': user.id }) }}">
								{{ user.username}}
							</a>
						</th>
						<td data-label="Rôle" class="text-center">
							{% if user.roles | length > 1 %}
								{% for role in user.roles %}
									{{ role }}
									{% if not loop.last %}
										-
									{% endif %}
								{% endfor %}
							{% else %}
								{% for role in user.roles %}
									{{ role }}
								{% endfor %}
							{% endif %}
						</td>
						<td data-label="Email" class="text-center">{{ user.email }}</td>
						<td data-label="Téléphone" class="text-center">{{ user.phoneNumber }}</td>
						<td data-label="Prénom" class="text-center">{{ user.firstName }}</td>
						<td data-label="Nom" class="text-center">{{ user.lastName }}</td>
						<td data-label="Service" class="text-center">{{ user.service.name }}</td>
						<td data-label="Action" class="text-center">
							{{ include('user/_delete_form.html.twig') }}
						</td>
					</tr>
				{% endif %}
			{% endfor %}
		</tbody>
	</tbody>
</table></div>
