<table class="table">
    <thead>
        <tr class="sorting">
            <th>Name</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
    {% for service in services %}
        <tr>
            <td data-label="Nom">{{ service.Name }}</td>
            <td data-label="Action">
                <a href="{{ path('service_edit', {'id': service.id}) }}">Editer</a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="3">Aucun service</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
