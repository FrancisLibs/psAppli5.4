{% extends 'base.html.twig' %}

{% block title %}Type de compte
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="/assets/css/account_type.css">
{% endblock %}

{% block body %}
	<main class="row justify-content-start mt-5">
		{% include 'user/_photo.html.twig' %}
		<article class="col-12 col-md-11 col-lg-10 col-xl-9">
			<header class="row mb-3 justify-content-start">
				<div class="d-flex justify-content-start">
					<h3 class="text-primary">Types de compte</h3>
					<a class="btn btn-primary btn-sm mb-3 ms-5" href="{{ path('accountType_new') }}" role="button">Nouveau service</a>
				</div>
			</header>
			<section class="col-10">
				<div class="mt-4">
					{% include 'account_type/_accountTypeList.html.twig' with {accountTypes:accountTypes} only %}
				</div>
			</section>
		</article>
	</main>
{% endblock %}