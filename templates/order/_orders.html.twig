{% for order in orders %}
	<tr>
		<td data-label="Numéro" class="font_size_table">
			<a class="btn index-button text-center" href="{{ path('order_show', {'id': order.id}) }}">{{ order.accountLetters }}{{ order.number }}</a>
		</td>
		<td data-label="Designation" class="text-center font_size_table">{{ order.designation }}</td>
		<td data-label="Designation" class="text-center font_size_table">{{ order.date|date("d/m/Y") }}</td>
		<td data-label="Fournisseur" class="text-center font_size_table">{{ order.provider.name }}</td>
		<td data-label="Fournisseur" class="text-center font_size_table">{{ order.createdBy.firstName }}</td>
		<td data-label="INV" class="text-center font_size_table">{{ order.investment }}</td>
	</tr>
{% else %}
	<tr>
		<td colspan="6">Il n'y a pas de commande enregistrée</td>
	</tr>
{% endfor %}
