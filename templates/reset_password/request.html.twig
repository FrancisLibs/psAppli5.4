{% extends 'base.html.twig' %}

{% block title %}Réinitialise ton mdp{% endblock %}

{% block body %}
    <div class="row mt-5">
        <div class="col-4 mx-auto">
            {% for flashError in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}
            <h1>Réinitialise ton mdp</h1>
            <div class="mt-3">
                {{ form_start(requestForm) }}
                    {{ form_row(requestForm.email) }}
                    <div>
                        <small>
                            Entre ton adresse email. Un email de réinitialisation te sera envoyé !
                        </small>
                    </div>

                    <button class="btn btn-primary mt-4">Envoyer email</button>
                {{ form_end(requestForm) }}
            </div>
        </div>
    </div>
{% endblock %}
